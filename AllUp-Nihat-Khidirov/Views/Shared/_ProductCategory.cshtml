@model IEnumerable<Product>

@for (int i = 0; i < Math.Ceiling((decimal)Model.Count() / 2); i++)
{
    <div class="col-lg-2">
        @foreach (Product product in Model.Skip(i * 2).Take(2))
        {
            <div class="single-product mt-30">
                <div class="product-image">
                    <a href="/product/detail/@product.Id">
                        <img class="first-image" src="~/assets/images/product/@product.MainImage" alt="product">
                        <img class="second-image" src="~/assets/images/product/@product.HoverImage" alt="product">
                    </a>
                    <ul class="product-meta">
                        <li><a class="addToCart" data-id="@product.Id"><i class="icon ion-bag"></i></a></li>
                        <li><a href="#"><i class="icon ion-android-favorite-outline"></i></a></li>
                        <li><a href="#"><i class="icon ion-android-options"></i></a></li>
                        <li><a class="productModal" data-toggle="modal" data-target="#productQuickModal" href="/product/Modal/@product.Id"><i class="icon ion-android-open"></i></a></li>
                    </ul>
                    @if (product.DiscountPrice > 0)
                    {
                        <span class="discount-product">-@((product.Price - product.DiscountPrice) / product.Price * 100)%</span>
                    }
                </div>
                <div class="product-content">
                    <ul class="product-rating">
                        <li><i class="fas fa-star"></i></li>
                        <li><i class="fas fa-star"></i></li>
                        <li><i class="fas fa-star"></i></li>
                        <li><i class="fas fa-star"></i></li>
                        <li><i class="fas fa-star"></i></li>
                    </ul>
                    <h4 class="product-title"><a href="/product/detail/@product.Id">@product.Name</a></h4>
                    @if (product.DiscountPrice > 0)
                    {
                        <div class="product-price">
                            <span class="regular-price">€@product.Price</span>
                            <span class="price-sale">€@product.DiscountPrice</span>
                        </div>
                    }
                    else
                    {
                        <div class="product-price">
                            <span class="price-sale">€@product.Price</span>
                        </div>
                    }
                </div>
            </div> <!-- single product -->
        }
    </div>
}
