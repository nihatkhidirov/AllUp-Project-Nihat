@model IPaginationVM
<div class="container">
    <div class="row">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item @(Model.HasPrevious ? "" : "d-none")"><a class="page-link" asp-route-page=@(Model.CurrentPage-1)>Previous</a></li>
                @for (int i = Model.Start; i <= Model.End; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "disabled" : "")"><a class="page-link" asp-route-page=@i>@i</a></li>
                }
                <li class="page-item @(Model.HasNext ? "" : "d-none")"><a class="page-link" asp-route-page=@(Model.CurrentPage+1)>Next</a></li>
            </ul>
        </nav>
    </div>
</div>